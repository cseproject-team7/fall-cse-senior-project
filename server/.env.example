# ===========================
# Azure ML Configuration
# ===========================
# Azure ML API endpoint and key (for production deployment)
AZURE_ML_API_KEY=your_api_key_here
AZURE_ML_ENDPOINT=https://your-endpoint.eastus.inference.ml.azure.com/score
AZURE_ML_DEPLOYMENT=your-deployment-name

# ===========================
# Local ML Server (for testing)
# ===========================
ML_SERVER_URL=http://localhost:5001

# ===========================
# Azure Storage (for logs)
# ===========================
AZURE_STORAGE_CONNECTION_STRING=your_storage_connection_string

# ===========================
# Event Hub (for production logs)
# ===========================
EVENT_HUB_CONNECTION_STRING=your_eventhub_connection_string
EVENT_HUB_NAME=signin-logs-stream

# ===========================
# Server Configuration
# ===========================
PORT=8080

# ===========================
# Authentication
# ===========================
ADMIN_USER=enter-email-here
ADMIN_HASH=...paste-your-long-hash-here...
JWT_SECRET=make-this-a-long-random-string-for-your-senior-project